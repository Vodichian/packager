<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vodichian.packager.PrimaryController">
   <center>
       <VBox spacing="20.0">
           <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
           </padding>
           <VBox fx:id="toolVBox" prefHeight="200.0" />
           <ListView fx:id="messageListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
       </VBox>
   </center>
   <top>
       <HBox BorderPane.alignment="CENTER">
           <ToolBar prefHeight="40.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <Button mnemonicParsing="false" text="Run" />
               <Button mnemonicParsing="false" text="Options" />
           </ToolBar>
           <ToolBar prefHeight="40.0" HBox.hgrow="NEVER">
               <Button mnemonicParsing="false" onAction="#onExit" text="Exit" />
           </ToolBar>
       </HBox>
   </top>
</BorderPane>
